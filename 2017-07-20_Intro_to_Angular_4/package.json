{
  "name": "mastering-angular-starter",
  "version": "1.2.0",
  "description": "Demonstration web application using Angular",
  "scripts": {
    "start": "npm run prod",
    "test": "karma start ./config/karma.conf.js",
    "clean": "rimraf dist",
    "dev": "npm run clean && concurrently \"npm run web-dev\" \"npm run rest\"",
    "prod": "npm run clean && concurrently \"npm run web-prod\" \"npm run rest\"",
    "web-dev": "webpack-dev-server --config ./config/webpack.dev.js",
    "web-prod": "webpack-dev-server --config ./config/webpack.prod.js",
    "rest": "json-server --watch --port 3010 db.json",
    "webpack-dev:w": "webpack --config ./config/webpack.dev.js --watch",
    "webpack-dev": "webpack --config ./config/webpack.dev.js",
    "webpack-prod": "webpack --config ./config/webpack.prod.js",
    "webpack-test": "webpack --config ./config/webpack.test.js",
    "tdd": "npm test -- --auto-watch --no-single-run"
  },
  "keywords": [
    "angular",
    "typescript",
    "angular"
  ],
  "author": "Eric W. Greene",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "7.1.1",
    "concurrently": "3.0.0",
    "eslint": "3.7.0",
    "istanbul": "0.4.5",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "2.4.1",
    "json-server": "0.9.4",
    "karma": "1.1.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.0.2",
    "karma-junit-reporter": "1.1.0",
    "karma-phantomjs-launcher": "1.0.1",
    "karma-source-map-support": "1.1.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.2",
    "phantomjs-prebuilt": "2.1.7",
    "sass-lint": "1.10.2",
    "tslint": "4.4.2",
    "webpack-dev-server": "2.4.5"
  },
  "dependencies": {
    "@angular/common": "4.0.2",
    "@angular/compiler": "4.0.2",
    "@angular/core": "4.0.2",
    "@angular/forms": "4.0.2",
    "@angular/http": "4.0.2",
    "@angular/platform-browser": "4.0.2",
    "@angular/platform-browser-dynamic": "4.0.2",
    "@angular/router": "4.0.2",
    "@types/core-js": "0.9.41",
    "@types/jasmine": "2.5.41",
    "@types/node": "7.0.12",
    "autoprefixer": "6.3.7",
    "bootstrap": "4.0.0-alpha.6",
    "bootstrap-loader": "2.0.0-beta.20",
    "copy-webpack-plugin": "4.0.1",
    "core-js": "2.4.1",
    "css-loader": "0.28.0",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "0.11.1",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.22.0",
    "node-sass": "4.5.0",
    "null-loader": "0.1.1",
    "postcss": "^5.2.17",
    "postcss-import": "9.1.0",
    "postcss-loader": "^1.3.3",
    "raw-loader": "0.5.1",
    "reflect-metadata": "0.1.8",
    "resolve-url-loader": "2.0.0",
    "rimraf": "2.5.2",
    "rxjs": "5.1.0",
    "sass-loader": "6.0.1",
    "style-loader": "0.16.1",
    "ts-helpers": "1.1.1",
    "ts-loader": "2.0.0",
    "tslint": "5.1.0",
    "typescript": "2.3.0",
    "url-loader": "0.5.7",
    "webpack": "2.2.1",
    "webpack-merge": "4.1.0",
    "zone.js": "0.8.5"
  },
  "devServer": {
    "contentBase": "dist",
    "historyApiFallback": true,
    "port": 5000,
    "proxy": {
      "/widgets": {
        "target": "http://localhost:3010"
      },
      "/books": {
        "target": "http://localhost:3010"
      },
      "/geocoder": {
        "target": "https://geocoding.geo.census.gov",
        "changeOrigin": true
      }
    }
  }
}
